using UnityEngine;

public class Player : MonoBehaviour
{
[SerializableField] private Transform groundCheckTransform = null;
[SerializableField] private LayerMask playerMask; //use this if you give the player and the ground check the same layer.
bool JumpKeyWasPressed;
float horizontalInput;
private Rigidbody rigidbodyComponent;
void Start 
{
rigidbodyComponent = GetComponent<RigidBody>();
}
void Update()
{
  if (Input.GrtKeyDown(KeyCode.Space))
  {
   JumpKeyWasPressed=true;
  }
  horizontalInput=Input.GetAxis("Horizontal");
}

void FixedUpdate()
{
rigidbodyComponent.velocity = new Vector3(horizontalInput,0,0);
//if(Physics.OverlapSphere(groundCheckTransform.position.0.0f).Length==1)
if(Physics.OverlapSphere(groundCheckTransform.position.0.0f,playerMask).Length==0)
{ 
return;
}


  if (JumpKeyWasPressed)
   {
 rigidbodyComponent.AddForce(Vector3.up*5, ForceMode.VelocityChange);
  JumpKeyWasPressed=false
   }
}
}
